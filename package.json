{
	"name": "bun-socket-scanner",
	"type": "module",
	"version": "0.0.0",
	"description": "A Bun security scanner that integrates with Socket.dev for package vulnerability detection",
	"author": "ryoppippi",
	"license": "MIT",
	"homepage": "https://github.com/ryoppippi/bun-socket-scanner#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ryoppippi/bun-socket-scanner.git"
	},
	"bugs": {
		"url": "https://github.com/ryoppippi/bun-socket-scanner/issues"
	},
	"keywords": [
		"bun",
		"security",
		"scanner",
		"socket.dev",
		"vulnerability",
		"supply-chain"
	],
	"exports": {
		".": "./src/index.ts",
		"./package.json": "./package.json"
	},
	"main": "src/index.ts",
	"module": "src/index.ts",
	"files": [
		"LICENSE",
		"README.md",
		"src/"
	],
	"engines": {
		"bun": ">=1.2.21"
	},
	"scripts": {
		"prepare": "git config --local core.hooksPath .githooks",
		"test": "bun test",
		"typecheck": "tsgo --noEmit",
		"lint": "eslint --cache .",
		"format": "bun lint --fix .",
		"release": "publint && bun lint && bun typecheck && bun test && bumpp",
		"prepack": "bun clean-pkg-json -r scripts.preinstall",
		"start": "bun run src/index.ts"
	},
	"dependencies": {
		"@socketsecurity/sdk": "^1.4.75",
		"consola": "^3.4.2",
		"gunshi": "^0.26.3"
	},
	"devDependencies": {
		"@ryoppippi/eslint-config": "^0.3.7",
		"@typescript/native-preview": "^7.0.0-dev.20250825.1",
		"bumpp": "^10.2.3",
		"bun-types": "^1.2.21",
		"clean-pkg-json": "^1.3.0",
		"eslint": "^9.34.0",
		"eslint-plugin-format": "^1.0.1",
		"lint-staged": "^16.1.5",
		"publint": "^0.3.12"
	},
	"lint-staged": {
		"*": [
			"eslint --cache --fix"
		],
		"*.test.ts": "bun test"
	}
}
